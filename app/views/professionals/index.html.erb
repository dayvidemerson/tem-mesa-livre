<div class="card">
  <div class="card-header text-white bg-dark">
    Profissionais
  </div>
  <div class="card-body">
    <%= render 'form_filter' %>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Cidade</th>
            <th>Estado</th>
            <th>Profissão</th>
            <th>Ações</th>
          </tr>
        </thead>

        <tbody>
          <% @professionals.each do |professional| %>
            <tr>
              <td><%= professional.user.name %></td>
              <td><%= professional.city %></td>
              <td><%= professional.state %></td>
              <td><%= professional.occupation %></td>
              <td>
                <div class="btn-group">
                  <%= link_to 'Exibir', professional, class: 'btn btn-warning btn-sm' if policy(Place).show? %>
                </div>
              </td>
            </tr>
          <% end %>
          <% if @professionals.empty? %>
            <tr>
              <td colspan=2>Não foram encontrados profissionais.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <hr />
  </div>
</div>
