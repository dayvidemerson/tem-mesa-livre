      <table class="table">
        <tr>
          <th>Nome</th>
          <td><%= @professional.user.name %></td>
        </tr>
        <tr>
          <th>E-mail</th>
          <td><%= @professional.user.email %></td>
        </tr>
        <tr>
          <th>Profiss√£o</th>
          <td><%= @professional.occupation %></td>
        </tr>
        <tr>
