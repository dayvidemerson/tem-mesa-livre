<div class="card">
  <div class="card-header text-white bg-dark">
    Lugares
  </div>
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th>Descricão</th>
          <th>Ações</th>
        </tr>
      </thead>

      <tbody>
        <% @places.each do |place| %>
          <tr>
            <td><%= t place.description %></td>
            <td>
              <div class="btn-group">
                <%= link_to 'Exibir', place, class: 'btn btn-warning btn-sm' %>
                <%= link_to 'Editar', edit_place_path(place), class: 'btn btn-info btn-sm' %>
                <%= link_to 'Excluir', place, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Você tem certeza?' } %>
              </div>
            </td>
          </tr>
        <% end %>
        <% if @places.empty? %>
          <tr>
            <td colspan=2>Não há lugares cadastrados.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  
    <hr />

    <%= link_to 'Adicionar Lugar', new_place_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>
